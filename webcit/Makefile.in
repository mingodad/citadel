prefix=@prefix@
srcdir=@srcdir@
VPATH=$(srcdir)

AUTOCONF=@AUTOCONF@
CC=@CC@
CFLAGS=@CFLAGS@
DEFS=@DEFS@
INSTALL=@INSTALL@
LIBOBJS=@LIBOBJS@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@
SED=@SED@
SETUP_LIBS=@SETUP_LIBS@
PTHREAD_DEFS=@PTHREAD_DEFS@
LIB_SUBDIRS=
PROG_SUBDIRS=@PROG_SUBDIRS@
SUBDIRS=$(LIB_SUBDIRS) $(PROG_SUBDIRS) 
LOCALEDIR=@LOCALEDIR@
WWWDIR=@WWWDIR@
